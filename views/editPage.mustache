<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <!-- Custom CSS -->
    <link href="/css/editPage.css" rel="stylesheet">

    <title>Editar Página</title>
</head>
<body>
    <header>
        <img src="/images/logoHeader.png" alt="logo PTGW">
    </header>
    <div class="container-principal">
        <h1>Editar Página</h1>

        <form action="/{{page.url}}/edit" method="post">
            <div class="mb-3">
                <label for="url" >URL</label>
                <input type="text" class="form-control" id="url" name="url" value="{{page.url}}" disabled>
            </div>
            <div class="mb-3">
                <label for="content" >Conteúdo</label>
                <textarea class="form-control" id="content" name="content" rows="3" required>{{page.content}}</textarea>
            </div>
            <div class="mb-3">
                <label for="category" >Categoria</label>
                <input type="text" class="form-control" id="category" name="category" value="{{page.category}}" required>
            </div>
            <div class="buttons">
                <button type="submit" id="btn-salvar" >Salvar</button>
                <button type="button" id="btn-cancela" onclick="window.location.href='/pages'">Cancelar</button>
            </div>           
        </form>      
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>