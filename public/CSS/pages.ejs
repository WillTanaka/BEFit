<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Páginas</title>
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center">Páginas</h1>
    <ul class="list-group">
        <% pages.forEach(page => { %>
            <li class="list-group-item">
                <h2><a href="/<%= page.url %>"><%= page.url %></a></h2>
                <p><%= page.content %></p>
                <a href="/<%= page.url %>/edit" class="btn btn-warning">Editar</a>
                <form action="/<%= page.url %>/delete" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <div class="text-center mt-3">
        <a href="/newPage" class="btn btn-primary">Criar nova página</a>
        <a href="/home" class="btn btn-secondary">Voltar para Home</a>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
